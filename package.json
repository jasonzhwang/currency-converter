{
  "name": "currency-converter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prepare": "husky",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --coverage --colors",
    "coverage": "jest --coverage",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint-staged": "npx lint-staged",
    "pre-commit": "npm run lint-staged && npm run test"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0",
    "yarn": "please-use-npm"
  },
  "dependencies": {
    "@types/node": "20.12.8",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@svgr/webpack": "^8.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.18",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sass": "^1.74.1",
    "tailwindcss": "^3.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    ".husky/*": [
      "prettier --write"
    ]
  }
}
